<div class="container">
  <%= form_for(@property, :url => {:action => 'create'}, :html => {:class => 'ptb-50'}) do |f| %>

    <div class="form-group">
      <%= f.label(:address, 'Address *') %>
      <%= f.text_field(:address) %>
    </div>
    <div class="form-group">
      <%= f.label(:city, 'City *') %>
      <%= f.text_field(:city) %>
    </div>
    <div class="form-group">
      <%= f.label(:state, 'State *') %>
      <%= f.text_field(:state) %>
    </div>
    <div class="form-group">
      <%= f.label(:property_type, 'Type *') %>
      <%= f.select(:property_type, ['House', 'Apartment', 'Townhome']) %>
    </div>
    <div class="form-group">
      <%= f.check_box(:agreement) %>
      <%= f.label(:agreement, 'I am the rightful owner of this property or have been given permission by the owner to post this information on their behalf. I agree that all information provided is accurate to the best of my knowledge and understand that I am subject to ban from the site and further legal action for false information or impersonating the rightful property owner.') %>
    </div>

    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
      Continue
    <% end %>

  <% end %>
</div>