<% if @property.property_type == 'House' %>
    <div class="col-xs-12 col-sm-6">
<% else %>
    <div class="col-xs-12 col-sm-6 mt-50">
<% end %>

    <div class="title-box col-xs-10 col-xs-offset-1">
        <p class="m-0">ADDITIONAL</p>
    </div>
    <ul class="amenities-list">
        <% @additional_amenities.each do |amenity| %> 
            <% if amenity.present? == true %>
                <li><span class="glyphicon glyphicon-ok-circle" style="color:green"></span> <%= amenity %></li>
            <% end %>
        <% end %>
    </ul>
</div>