<div class="container">
  <%= form_for(@property, :url => wizard_path, :html => {:class => 'ptb-50'}) do |f| %>

     <div class="form-group">
      <%= f.label(:description, 'Description') %>
      <%= f.text_area(:description, :size => "50x5") %>
    </div>
    <div class="form-group">
      <%= f.label(:facility_name, 'Facility Name') %>
      <%= f.text_field(:facility_name) %>
    </div>
    <div class="form-group">
      <%= f.label(:property_manager, 'Property Manager') %>
      <%= f.text_field(:property_manager) %>
    </div>
    <div class="form-group">
      <%= f.label(:office_address, 'Office Address') %>
      <%= f.text_field(:office_address) %>
    </div>
    <div class="form-group">
      <%= f.label(:phone, 'Phone *') %>
      <%= f.text_field(:phone) %>
    </div>
    <div class="form-group">
      <%= f.label(:email, 'Email *') %>
      <%= f.text_field(:email) %>
    </div>
    <div class="form-group">
      <%= f.label(:website, 'Website *') %>
      <%= f.text_field(:website) %>
    </div>
    <div class="form-group">
      <%= f.label(:facebook, 'Facebook *') %>
      <%= f.text_field(:facebook) %>
    </div>
    
    <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
    	Continue
    <% end %>

  <% end %>
</div>

