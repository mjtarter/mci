<!-- Meta !-->
<% 
@page_title = "Student Housing | Bloomington Indiana"
@og_description = "Find your dream student housing property in Bloomington, Indiana and sign a lease today!"
%>
<!-- End Meta !-->

<div id="contact-page">
    <section class="container">
        <div class="col-xs-12 col-sm-6 col-sm-offset-3 text-center">
            <h1><i>Contact Us</i></h1>
            <hr>
            <%= form_tag "/property/contact" do %>
                <div class="form-group">
                    <%= label_tag :first_name, 'First Name *' %>
                    <%= text_field_tag :first_name, nil, placeholder: 'Enter First Name' %>
                </div>
                <div class="form-group">
                    <%= label_tag :last_name, 'Last Name *' %>
                    <%= text_field_tag :last_name, nil, placeholder: 'Enter Last Name' %>
                </div>
                <div class="form-group">
                    <%= label_tag :email, 'Email *' %>
                    <%= text_field_tag :email, nil, placeholder: 'Enter Email' %>
                </div>
                <div class="form-group">
                    <%= label_tag :message, 'Message *' %>
                    <%= text_area_tag :message, nil, placeholder: 'Enter your questions / comments here!', rows: 5, class: "form-control" %>
                </div>
                <div class="form-group">
                    <%= button_tag("Submit", type: 'submit', class: "button blue-button")  %>
                </div>

            <% end %>
        </div>          
    </section>
</div>